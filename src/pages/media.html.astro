---
import BaseLayout from "../layouts/BaseLayout.astro";

const socials = [
  // { label: "YouTube", href: "https://www.youtube.com/@" },
  // { label: "Twitch", href: "https://twitch.tv/" },
  // { label: "TikTok", href: "https://www.tiktok.com/@" },
  // { label: "Instagram", href: "https://www.instagram.com/@" },
];

const resources = [
  { label: "Stratics (UO)", href: "https://uo.stratics.com/" },
  { label: "UOGuide", href: "https://www.uoguide.com/" },
  { label: "UO-Cah (calculators/tools)", href: "https://www.uo-cah.com/" },
];

const featured = {
  title: "Featured Video",
  youtubeId: "", // put the YouTube video ID here later (e.g. "dQw4w9WgXcQ")
};
---

<BaseLayout title="Media • Hit Syndicate • Atlantic" current="media">
  <section class="hero" aria-label="Media page header">
    <div>
      <h1>Media</h1>
      <p class="tagline">Clips • Videos • Links • Resources</p>
    </div>

    <div class="wax" aria-label="Section label">
      <span class="seal" aria-hidden="true"></span>
      <span>Intel</span>
    </div>
  </section>

  <section class="grid" aria-label="Media content">
    <section class="card" aria-label="Featured video">
      <h2>{featured.title}</h2>

      {featured.youtubeId ? (
        <div style="position:relative;padding-top:56.25%;">
          <iframe
            src={`https://www.youtube-nocookie.com/embed/${featured.youtubeId}`}
            title="YouTube video player"
            style="position:absolute;top:0;left:0;width:100%;height:100%;border:0;"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          />
        </div>
      ) : (
        <p class="muted">
          No featured video yet. Drop a YouTube ID into <code>featured.youtubeId</code> when you’re ready.
        </p>
      )}
    </section>

    <section class="card half" aria-label="Social links">
      <h2>Socials</h2>

      {socials.length === 0 ? (
        <p class="muted">Links coming soon.</p>
      ) : (
        <ul>
          {socials.map((s) => (
            <li><a href={s.href} rel="noopener noreferrer" target="_blank">{s.label}</a></li>
          ))}
        </ul>
      )}
    </section>

    <section class="card half" aria-label="Resources">
      <h2>Resources</h2>
      <ul>
        {resources.map((r) => (
          <li><a href={r.href} rel="noopener noreferrer" target="_blank">{r.label}</a></li>
        ))}
      </ul>
    </section>

    <section class="card" aria-label="Archive placeholders">
      <h2>Guild Archive</h2>
      <p class="muted">
        Tournament brackets, screenshots, and event recaps will live here (or link out to albums/videos).
      </p>
      <ul>
        <li class="muted">Add: “Event Recap — date — links” entries as you run things.</li>
      </ul>
    </section>
  </section>
</BaseLayout>
