---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Hit Syndicate • Atlantic"
  current="home"
  heroImage="/images/uo-hero.png"
>
  <section class="hero" aria-label="Guild dashboard header">
    <div>
      <h1>Hit Syndicate</h1>
      <p class="tagline">Atlantic • PvP + PvM • Events • Training</p>
    </div>

    <div class="wax" aria-label="Section label">
      <span class="seal" aria-hidden="true"></span>
      <span>Guild Dashboard</span>
    </div>
  </section>

  <section class="grid" aria-label="Dashboard cards">
    <section class="card half" aria-label="Quick links">
      <h2>Quick Links</h2>
      <ul>
        <li><a href="discord.html">Discord</a></li>
        <li><a href="calendar.html">Event calendar</a></li>
        <li><a href="syndicategames.html">Syndicate games</a></li>
        <li><a href="templates.html">Templates &amp; builds</a></li>
        <li><a href="media.html">Media</a></li>
      </ul>
    </section>

    <section class="card half" aria-label="Announcements">
      <h2>Announcements</h2>
    </section>

    <section class="card half" aria-label="Upcoming events">
      <h2>Upcoming Events</h2>
    </section>

    <section class="card half" aria-label="Training and practice">
      <h2>Training &amp; Practice</h2>
      <ul>
        <li>PvP practice at the duel arena</li>
        <li>Template feedback and theory</li>
        <li>Suit planning and gear direction</li>
        <li>Skill training help</li>
      </ul>
    </section>

    <section class="card" aria-label="Resources">
      <h2>Resources</h2>
      <ul>
        <li><a href="templates.html">Template suggestions</a></li>
        <li><a href="templates.html#meta">Meta and off-meta ideas</a></li>
        <li><a href="calendar.html">Event schedule</a></li>
        <li><a href="discord.html">Contact &amp; coordination</a></li>
      </ul>
    </section>
  </section>
</BaseLayout>
