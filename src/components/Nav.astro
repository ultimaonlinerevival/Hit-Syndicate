---
const { current = "" } = Astro.props;

const is = (key) => (current === key ? { "aria-current": "page" } : {});
---

<nav class="navwrap" aria-label="Primary navigation">
  <!-- Desktop pills -->
  <a class="nav-desktop" href="index.html" {...is("home")}>Home</a>
  <a class="nav-desktop" href="about.html" {...is("about")}>About</a>
  <a class="nav-desktop" href="events.html" {...is("events")}>Events</a>
  <a class="nav-desktop" href="syndicategames.html" {...is("games")}>Syndicate Games</a>
  <a class="nav-desktop" href="discord.html" {...is("discord")}>Discord</a>
  <a class="nav-desktop" href="templates.html" {...is("templates")}>Templates</a>
  <a class="nav-desktop" href="media.html" {...is("media")}>Media</a>

  <!-- Mobile hamburger -->
  <details class="nav-mobile">
    <summary class="menu-btn">
      Menu
      <span class="menu-icon" aria-hidden="true"></span>
    </summary>
    <div class="menu-panel">
      <a href="index.html" {...is("home")}>Home</a>
      <a href="about.html" {...is("about")}>About</a>
      <a href="events.html" {...is("events")}>Events</a>
      <a href="syndicategames.html" {...is("games")}>Syndicate Games</a>
      <a href="discord.html" {...is("discord")}>Discord</a>
      <a href="templates.html" {...is("templates")}>Templates</a>
      <a href="media.html" {...is("media")}>Media</a>
    </div>
  </details>
</nav>
